<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor"
    tools:context=".SettingsActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/backgroundColor"
            app:icon="@drawable/left"
            app:iconTint="?attr/colorOnPrimary"
            android:layout_marginTop="2dp"
            app:iconGravity="textStart"
            android:id="@+id/back_button"
            android:src="@drawable/left"
            android:contentDescription="@string/settings"
            android:foreground="?attr/selectableItemBackground"
            android:fontFamily="@font/ys_display_medium"


            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/text_size_big_button"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <LinearLayout
        style="@style/SettingsLinerLayout"
        >


        <androidx.appcompat.widget.SwitchCompat

            style="@style/ButtonSettings"
            android:paddingStart="22dp"
            app:icon='@drawable/control'
            android:paddingEnd="8dp"
            android:text="@string/dark_theme"
            app:iconGravity="end"
            android:id="@+id/switch_off"
            tools:ignore="TouchTargetSizeCheck,UseSwitchCompatOrMaterialXml"
            />


    </LinearLayout>

    <LinearLayout
        style="@style/SettingsLinerLayout">

        <Button
            android:id="@+id/share"
            style="@style/ButtonSettings"
            android:text="@string/share_app"
            app:icon="@drawable/share"
            />

    </LinearLayout>

    <LinearLayout
        style="@style/SettingsLinerLayout"
        >
        <Button
            style="@style/ButtonSettings"
            android:text="@string/help_me"
            app:icon="@drawable/group"
            android:id="@+id/help"

            />
    </LinearLayout>
    <LinearLayout
        style="@style/SettingsLinerLayout"
        >
        <Button
            android:id="@+id/agree"
            style="@style/ButtonSettings"
            android:text="@string/agreement"
            app:icon="@drawable/agree"

            />
    </LinearLayout>

</LinearLayout>