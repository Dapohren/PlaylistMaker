<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:background="?attr/backgroundColor"
    android:layout_height="wrap_content"
    android:paddingHorizontal="30dp"
    android:paddingVertical="10dp"
    android:padding="10dp">
    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_image"
        android:src="@drawable/plug_iocqiev5zp1e"
        app:iconTint="@color/grey"
        />
    <LinearLayout
        android:layout_width="250dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="6dp"
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@string/name_song"
            android:fontFamily="@font/ys_display_regular"
            android:textSize="16sp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/song_performer"
                android:textColor="@color/grey"
                android:fontFamily="@font/ys_display_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@string/artist"
                android:textSize="11sp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delimiter"
                app:iconTint="@color/grey"
                app:icon="@drawable/delimiter"
                app:iconGravity="textEnd"
                />
            <TextView
                android:id="@+id/song_time"
                android:textSize="11sp"
                android:fontFamily="@font/ys_display_regular"
                android:textColor="@color/grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_song"
                />
        </LinearLayout>

    </LinearLayout>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="?attr/backgroundColor"
            app:icon="@drawable/agree"
            app:iconTint="?attr/iconTint"
            app:iconGravity="end"
            android:contentDescription="@string/error"

            />
</LinearLayout>